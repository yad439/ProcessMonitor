<Window x:Class="ProcessGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProcessGui"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="400" x:ClassModifier="internal">
    <Grid>
        <ListView x:Name="processesListView" Margin="8">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="400"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
